.logo
	.logo_text
		%a.ajax_link{ :href => calendar_path } Festivāli
		%br
		%a.ajax_link{ :href => music_about_path } Par projektu
		%br
		%a.ajax_link{ :href => rules_path } Noteikumi
		%br
	.logo_image.green
		.helper.music_helper

.artists
	.button.shift_right.start_player
		Klausīties
	%h2
		Mūzikas festivālu
		%span gaidītāko mākslinieku
		plakāts
	.artists_wrap
		= render 'artists'
	%a.button.ajax_link{ :href => new_vote_path }
		Pievienot
	%h3
		Pievieno savus gaidītākos māksliniekus 
		un laimē biļetes uz festivāliem.
	
-#.products
	%h1
		%span Reklāmu
		katalogs
	.product_wrap
		- 8.times do |i|
			.product
				.image{ :style => "background-image: url('/assets/product_placeholder.jpg');" }
					.text
						product text
				.product_button
					Apskatīties
		.clear
	%p
		Mēs cienam tavu izvēles brīvību tādēļ, ja reklāmas kataloga produkti tev nav aktuāli,
		dari sekojoši - kvadrātā uzzīmē krustiņu
		%span.green X
		un reklāmas izgaisīs.
	.drawing_spot

.overlay
.player
	.video
		#player
	.description
		.artist
		.festival
		.vote
			.count
	.controls
		.play